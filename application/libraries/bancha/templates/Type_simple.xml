<?xml version="1.0" encoding="utf-8"?>
<!-- generator="bancha-{version}" -->
<content id="{id}">
	<name>{name}</name>
	<descriptions label="{description}" new="{label_new}"/>
	<tree>false</tree>
	<primary_key>id_record</primary_key>
	<table>records</table>
	<table_stage>records_stage</table_stage>
	<has_categories>true</has_categories>
	<has_hierarchies>true</has_hierarchies>
	<fieldset name="General informations" icon="page">
		<field id="id_record" column="true">
			<type>hidden</type>
			<list>true</list>
			<admin>true</admin>
		</field>
		<field id="id_type" column="true">
			<type>hidden</type>
			<list>true</list>
			<default>{id}</default>
		</field>
		<field id="date_insert" column="true">
			<type>hidden</type>
			<list>true</list>
			<default>eval:time()</default>
		</field>
		<field id="published" column="true">
			<type>hidden</type>
			<list>true</list>
			<default>0</default>
		</field>
		<field id="title" column="true" link="edit">
			<description>Title</description>
			<type>text</type>
			<mandatory>true</mandatory>
			<admin>true</admin>
			<list>true</list>
		</field>
		<field id="date_publish" column="true">
			<description>Visibility date</description>
			<type>datetime</type>
			<admin>true</admin>
			<list>true</list>
		</field>
		<field id="uri" column="true">
			<description>Page URL</description>
			<type>text</type>
			<admin>true</admin>
			<list>true</list>
		</field>
		<field id="lang" column="true">
			<description>Language</description>
			<type>select</type>
			<admin>true</admin>
			<list>true</list>
			<options>
				<custom>config_item('languages_select')</custom>
			</options>
			<default>eval:$this->lang->current_language</default>
		</field>
		<field id="content">
			<description>Content</description>
			<type>textarea</type>
			<list>true</list>
		</field>
	</fieldset>
	<fieldset name="Attachments" icon="images">
		<field id="images">
			<description>Images</description>
			<type>images</type>
			<size>4096</size>
			<mimes>jpg|gif|png|jpeg</mimes>
			<original>true</original>
			<encrypt_name>true</encrypt_name>
			<resized>640x?</resized>
			<thumbnail>60x?</thumbnail>
			<max>3</max>
			<list>true</list>
		</field>
	</fieldset>
	<fieldset name="Meta tags" icon="tag">
		<field id="meta_title">
			<description>Title</description>
			<type>text</type>
			<length>128</length>
		</field>
		<field id="meta_description">
			<description>Description</description>
			<type>text</type>
			<length>128</length>
		</field>
		<field id="meta_keywords">
			<description>Keywords</description>
			<type>text</type>
			<length>128</length>
		</field>
	</fieldset>
</content>