<?xml version="1.0" encoding="utf-8"?>
<!-- generator="bancha-{version}" -->
<content>
	<id>{id}</id>
	<name>{name}</name>
	<description>{description}</description>
	<tree>true</tree>
	<primary_key>id_record</primary_key>
	<table>records</table>
	<table_stage>true</table_stage>
	<parent_types>
		<type>{name}</type>
	</parent_types>
	<has_categories>true</has_categories>
	<triggers>
		<trigger on="insert, update, delete" field="id_parent">
			<sql action="recount" type="{name}" target="child_count" />
		</trigger>
	</triggers>
	<fieldset>
		<name>Informazioni generali</name>
		<field id="id_record" column="true">
			<type>hidden</type>
			<list>true</list>
			<admin>true</admin>
		</field>
		<field id="id_type" column="true">
			<type>hidden</type>
			<list>true</list>
			<default>{id}</default>
		</field>
		<field id="published" column="true">
			<type>hidden</type>
			<default>0</default>
		</field>
		<field id="date_insert" column="true">
			<type>hidden</type>
			<list>true</list>
			<default>eval:time()</default>
		</field>
		<field id="id_parent" column="true">
			<description>Pagina padre</description>
			<type>select</type>
			<list>true</list>
			<options>
				<custom>$this->view->get('parent_tree');</custom>
			</options>
		</field>
		<field id="title" column="true" link="edit">
			<description>Titolo</description>
			<type>text</type>
			<mandatory>true</mandatory>
			<admin>true</admin>
			<list>true</list>
		</field>
		<field id="uri" column="true">
			<description>Parte finale URL</description>
			<type>text</type>
			<list>true</list>
		</field>
		<field id="lang" column="true">
			<description>Lingua</description>
			<type>select</type>
			<admin>true</admin>
			<list>true</list>
			<options>
				<custom>$this->config->item('languages_select')</custom>
			</options>
			<default>eval:$this->lang->current_language</default>
		</field>
		<field id="contenuto">
			<description>Contenuto</description>
			<type>textarea</type>
			<list>true</list>
		</field>
		<field id="show_in_menu" column="true">
			<description>Mostra nel menu</description>
			<type>radio</type>
			<mandatory>true</mandatory>
			<admin>true</admin>
			<list>true</list>
			<options>
				<option value="T">Menu principale</option>
				<option value="S">Sitemap</option>
				<option value="F">Non visualizzare</option>
			</options>
			<default>T</default>
		</field>
		<field id="child_count" column="true">
			<description>N. figli</description>
			<type>hidden</type>
			<list>true</list>
			<default>0</default>
			<admin>true</admin>
		</field>
	</fieldset>
	<fieldset>
		<name>Aspetto e azioni</name>
		<field id="view_template">
			<description>Template di visualizzazione</description>
			<type>select</type>
			<mandatory>true</mandatory>
			<admin>false</admin>
			<list>true</list>
			<options>
				<option value="default">Default</option>
			</options>
		</field>
		<field id="page_cache">
			<description>Cache pagina (minuti)</description>
			<type>number</type>
			<default>0</default>
		</field>
		<field id="priority" column="true">
			<description>Priorit√†</description>
			<type>number</type>
			<default>0</default>
		</field>
		<field id="action">
			<description>Azione pagina</description>
			<type>select</type>
			<onchange>bancha.actions.record_act();</onchange>
			<options>
				<option value="text">Testo introduttivo</option>
				<option value="list">Lista di contenuti</option>
				<option value="action">Azione personalizzata</option>
				<option value="link">Link esterno</option>
			</options>
		</field>
		<field id="action_list_type">
			<visible>false</visible>
			<description>Tipo di contenuto</description>
			<type>select</type>
			<sql cache="true">
				<select>id_type AS value, name</select>
				<from>types</from>
				<where></where>
				<order_by>name ASC</order_by>
			</sql>
		</field>
		<field id="action_list_categories">
			<visible>false</visible>
			<description>Categorie</description>
			<type>text</type>
		</field>
		<field id="action_list_where">
			<visible>false</visible>
			<description>Condizione "WHERE"</description>
			<type>text</type>
		</field>
		<field id="action_list_limit">
			<visible>false</visible>
			<description>Risultati per pagina</description>
			<type>number</type>
		</field>
		<field id="action_list_order_by">
			<visible>false</visible>
			<description>Ordinamento risultati</description>
			<type>select</type>
			<options>
				<option value="id_record DESC">ID record (DESC)</option>
				<option value="id_record ASC">ID record (ASC)</option>
				<option value="date_publish DESC">Data di pubblicazione (DESC)</option>
				<option value="date_publish ASC">Data di pubblicazione (ASC)</option>
			</options>
		</field>
		<field id="action_list_has_feed">
			<visible>false</visible>
			<description>Feed RSS</description>
			<type>select</type>
			<options>
				<option value="T">Si</option>
				<option value="F">No</option>
			</options>
			<default>T</default>
		</field>
		<field id="action_custom_name">
			<visible>false</visible>
			<description>Nome azione</description>
			<type>text</type>
		</field>
		<field id="action_link_url">
			<visible>false</visible>
			<description>Indirizzo di destinazione</description>
			<type>text</type>
		</field>
	</fieldset>
	<fieldset>
		<name>Allegati</name>
		<field id="immagini">
			<description>Immagini</description>
			<type>images</type>
			<size>4096</size>
			<mimes>jpg|gif|png|jpeg</mimes>
			<encrypt_name>false</encrypt_name>
			<original>true</original>
			<resized>640x?</resized>
			<thumbnail>60x?</thumbnail>
			<max>3</max>
			<list>true</list>
		</field>
	</fieldset>
	<fieldset>
		<name>Meta tags</name>
		<field id="meta_title">
			<description>Title</description>
			<type>text</type>
			<length>128</length>
		</field>
		<field id="meta_description">
			<description>Description</description>
			<type>text</type>
			<length>128</length>
		</field>
		<field id="meta_keywords">
			<description>Keywords</description>
			<type>text</type>
			<length>128</length>
		</field>
	</fieldset>
</content>